{
  "name": "sqlite-lib",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "dev:vue": "pnpm --filter vue-app dev",
    "dev:docs": "pnpm --filter docs dev",
    "build:docs": "pnpm --filter docs build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:vue-app": "pnpm --filter vue-app test",
    "lint": "oxlint .",
    "lint:type-aware": "oxlint --type-aware .",
    "lint:fix": "oxlint --fix .",
    "typecheck": "tsc --build",
    "typecheck:watch": "tsc --build --watch",
    "typecheck:clean": "tsc --build --clean",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "packageManager": "pnpm@10.18.3",
  "devDependencies": {
    "@vitest/browser": "^4.0.6",
    "@vitest/browser-playwright": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "oxlint": "^1.25.0",
    "oxlint-tsgolint": "^0.4.0",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6",
    "vitest-browser-vue": "^2.0.1"
  }
}
