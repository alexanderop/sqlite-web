{
  "$schema": "https://oxc.rs/schemas/oxlintrc.json",
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "globals": {
    "SharedArrayBuffer": "readonly",
    "Atomics": "readonly"
  },
  "plugins": ["typescript", "jsx-a11y", "vitest", "unicorn", "jest", "react"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off",
    "perf": "warn",
    "style": "off",
    "restriction": "off",
    "nursery": "off"
  },
  "rules": {
    "typescript/no-explicit-any": "warn",
    "typescript/no-unused-vars": "warn",
    "typescript/explicit-function-return-type": "off",
    "typescript/no-non-null-assertion": "warn",
    "typescript/consistent-type-definitions": "off",
    "unicorn/filename-case": "off",
    "unicorn/prevent-abbreviations": "off",
    "unicorn/no-array-sort": "warn",
    "unicorn/prefer-modern-math-apis": "warn",
    "unicorn/prefer-node-protocol": "warn",
    "no-console": "off",
    "no-debugger": "warn",
    "no-await-in-loop": "warn",
    "jest/require-to-throw-message": "warn",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "error",
    "prefer-arrow-callback": "off",
    "sort-imports": "off",
    "sort-keys": "off",
    "no-magic-numbers": "off",
    "max-lines-per-function": "off",
    "func-style": "off",
    "eslint/no-else-return": "error",
    "eslint/no-param-reassign": "error",
    "eslint/array-callback-return": "error",
    "eslint/no-new": "warn",
    "eslint/prefer-object-spread": "warn",
    "unicorn/no-array-for-each": "warn",
    "unicorn/prefer-array-find": "warn",
    "unicorn/prefer-array-some": "warn",
    "unicorn/prefer-array-flat-map": "warn",
    "unicorn/no-array-reduce": "off",
    "unicorn/no-array-reverse": "error",
    "unicorn/no-this-assignment": "warn",
    "unicorn/prefer-spread": "warn",
    "unicorn/no-new-array": "warn",
    "unicorn/explicit-length-check": "warn",
    "eslint/no-nested-ternary": "warn",
    "eslint/no-lonely-if": "warn",
    "eslint/no-unneeded-ternary": "warn",
    "eslint/curly": "warn",
    "eslint/yoda": "error",
    "unicorn/throw-new-error": "error",
    "unicorn/error-message": "error",
    "unicorn/no-useless-undefined": "warn",
    "unicorn/prefer-ternary": "warn",
    "unicorn/no-negated-condition": "warn",
    "unicorn/consistent-function-scoping": "warn"
  },
  "ignorePatterns": [
    "**/dist/**",
    "**/node_modules/**",
    "**/.astro/**",
    "**/coverage/**"
  ],
  "settings": {
    "jsx": {
      "pragma": "h",
      "pragmaFrag": "Fragment"
    }
  }
}
